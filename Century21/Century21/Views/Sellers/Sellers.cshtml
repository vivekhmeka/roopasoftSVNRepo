@model Century21.Models.SellersInfo
@{
    ViewBag.Title = "Sellers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Home</title>

    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

    <style>
        .home-link a {
            background: transparent !important;
        }

        .for-sellers-link-sub1 a {
            background: #8C6D00 !important;
        }

        .for-sellers-link a {
            background: #8C6D00 !important;
        }

        .for-sellers-link-sub2 a {
            background: transparent !important;
        }
        
        .for-sellers-link-sub12 a:hover {
            background: #8C6D00 !important;
        }


        .well-sm .form-group input {
            height: 45px !important;
            font-size: 16px;
        }

        .contact-info h1 {
            text-align: center;
            font-size: 40px;
            font-weight: bold;
            color: #258EDF;
            padding-top: 30px;
            margin: 0;
            padding-bottom: 30px;
            margin-bottom: 15px;
        }

        .contact-info-fields input {
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075) !important;
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075) !important;
            height: 40px !important;
        }

        .contact-info-fields button {
            background-color: #39b3d7 !important;
            border-color: #269abc !important;
            -webkit-box-shadow: inset 0 3px 5px rgba(0,0,0,0.125);
            width: 172px;
            box-shadow: inset 0 3px 5px rgba(0,0,0,0.125);
            font-size: 18px;
        }
    </style>
    <script>
        function SellersInfo() {

            window.location.href = '@Url.Action("SaveSellersInfo", "Sellers")';
        }
    </script>
</head>
<!--/head-->
using (@Html.BeginForm("SaveSellersInfo", "Sellers", FormMethod.Get)){

<body class="homepage">
    <div class="row" style="margin: 0">
        <!--<div class="fixed-img"></div>-->
        <div class="contact-info wow fadeInDown">
            <h1 style="margin-bottom:0">Selling Your Home</h1>
        </div>
        <div class="row" style="margin: 0; margin-bottom: 20px;">
            <img src="~/images/agentgroup-crop-u7209.jpg" width="100%" />
            <div class="contact-info wow fadeInDown">
                <h1 style="font-size: 30px;">Talk to a Local Agent</h1>
                <br />
                <h1 style="font-size: 30px; margin-top: -93px;">Request a free, no-obligation consultation on your home's value</h1>
            </div>
        </div>
        <div class="container">
            <div class="col-md-12 wow fadeInDown contact-info-fields">
                <div class="well well-sm">
                    <form>
                        <div class="row">
                            <div class="col-md-6">

                                <h1 style="background: #8C6D00 !important;    color: #FFF;    font-size: 30px;    text-align: center;    padding: 5px;    border-radius: 5px;    padding: 15px;"> Your Contact Information</h1>


                                <div class="form-group">
                                    @Html.TextBoxFor(t => t.Name, new { @class = "form-control", @placeholder = "Enter Name" })
                                    @*<input type="text" class="form-control" placeholder="Enter Name" required="required" />*@
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(t => t.Email, new { @class = "form-control", @placeholder = "Enter Email" })
                                    @*<input type="email" class="form-control" placeholder="Enter Email" required="required" />*@
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(t => t.Phone, new { @class = "form-control", @placeholder = "Phone" })
                                    @*<input type="text" class="form-control" placeholder="Phone" required="required" />*@
                                </div>
                            </div>

                            <div class="col-md-6">

                                <h1 style="background: #8C6D00 !important;    color: #FFF;    font-size: 30px;    text-align: center;    padding: 5px;    border-radius: 5px;    padding: 15px;"> Prepare a Price Estimate For</h1>

                                <div class="form-group">
                                    @Html.TextBoxFor(t => t.Address, new { @class = "form-control", @placeholder = "Enter Address" })
                                    @*<input type="text" class="form-control" placeholder="Enter Address" required="required" />*@
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(t => t.Zip, new { @class = "form-control", @placeholder = "Zip" })
                                    @*<input type="text" class="form-control" placeholder="Zip" required="required" />*@
                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(t => t.Message, new { @class = "form-control", @placeholder = "Message", @height = "150px", @rows = "5", @cols = "25" })
                                    @*<textarea name="message" style="height: 50px;" class="form-control" rows="9" cols="25" required="required"
                                        placeholder="Message"></textarea>*@
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary pull-right" id="btnSubmitSellersInfo">
                                    Submit
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-xs-12 wow fadeInDown" style="text-align:center; margin-bottom:40px; margin-top:30px;">
                <img src="~/images/house-u7218.png" />
                <p>Your home is an extremely important piece of capital and remains an integral part of your life, even while you are selling it. We understand how important it is to your future to get the price you want on your home and with our considerable knowledge of the market, we know how to price it correctly, the first time.</p>
                <p style="font-weight:bold">We will work closely with you to guarantee this transition is completed as efficiently and successfully as possible.</p>
            </div>
            <div class="col-md-12 wow fadeInDown contact-info-fields">
                <div class="well well-sm">
                    <form>
                        <div class="row">
                            <div class="col-md-12">
                                <h1 style="background: #8C6D00 !important;    color: #FFF;    font-size: 30px;    text-align: center;    padding: 5px;    border-radius: 5px;    padding: 15px;;"> Home Evaluation</h1>
                                <p style="text-align:center">
                                    We can provide a free evaluation of your home using the specific characteristics to
                                    compare it with relevant current market prices. This detailed analysis will give you
                                    a preliminary idea of how much you can expect from the market and where we
                                    should aim. Contact us to get this process started so that you can move forward into
                                    what the future holds next for you.
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>

        <script>
            function toggleChevron(e) {
                $(e.target)
                    .prev('.panel-heading')
                    .find("i.indicator")
                    .toggleClass('glyphicon-chevron-down glyphicon-chevron-right');
            }
            $('#accordion').on('hidden.bs.collapse', toggleChevron);
            $('#accordion').on('shown.bs.collapse', toggleChevron);
        </script>
        <script>

            $('#main-slider .carousel').carousel({
                interval: 4000,
                pause: false
            })
        </script>
        <script>
            $(window).scroll(function () {
                if ($(this).scrollTop() > 150) {

                    $(".navbar-inverse").addClass("fixed-header");

                }
                else {
                    $(".navbar-inverse").removeClass("fixed-header");
                }
            });
        </script>
</body>
}
</html>


